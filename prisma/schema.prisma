generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Vessel {
  id        Int      @id @default(autoincrement())
  name      String
  ownerId   String
  naccsCode String   @unique
  voyage Voyage[]
}

model Voyage {
  id         Int      @id @default(autoincrement())
  vessel     Vessel   @relation(fields: [vesselId], references: [id])
  vesselId   Int
  origin     String
  destination String
  startTime  DateTime
  endTime    DateTime
}